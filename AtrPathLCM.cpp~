#include "AtrPathLCM.h"

AtrPathLCM::AtrPathLCM(string atrValue,BIGNUM *LCMValue,int track)
{
	this->atrValue = atrValue;
	this->track = track;
	this->LCMValue = BN_new();
	BN_copy(this->LCMValue,LCMValue);
}
AtrPathLCM::AtrPathLCM(string atrValue)
{
	this->atrValue = atrValue;
	this->track = track;	
	this->LCMValue = BN_new();
	BN_one(this->LCMValue);
}
void AtrPathLCM::SetTrack(int track)
{
	this->track = track;
}

int AtrPathLCM::GetTrack()
{
	return track;
}

void AtrPathLCM::MultiLagCoe(BIGNUM *lagCoe,BN_CTX *ctx)
{

    	BN_mul(LCMValue,LCMValue,lagCoe,ctx);
}

string AtrPathLCM::GetAtrValue()
{
	return atrValue;
}

BIGNUM * AtrPathLCM::GetLCMValue()
{
	BIGNUM * copy = BN_new();
	BN_copy(copy,LCMValue);
	return copy; 
}


